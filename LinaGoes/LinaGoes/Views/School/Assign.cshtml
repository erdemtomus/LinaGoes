@model LinaGoes.ViewModels.SchoolAssignViewModel
    
<h2>Okul Form</h2>


@using (Html.BeginForm("Assign", "School", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "Lütfen Hataları Düzeltiniz")
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.SchoolId)
        @Html.DropDownListFor(m => m.SchoolId, new SelectList(Model.SchoolList, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SchoolId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserId)
        @Html.DropDownListFor(m => m.UserId, new SelectList(Model.UserList, "Id", "Email"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
}

