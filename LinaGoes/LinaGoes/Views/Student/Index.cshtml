@using LinaModels
@model System.Collections.Generic.List<LinaModels.Student>

<h2>Sınıflar</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Sınıf</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Student item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Classroom.Name</td>
                <td><a href="/Student/Edit/@item.Id">Güncelle</a></td>
            </tr>
        }

    </tbody>

</table>
